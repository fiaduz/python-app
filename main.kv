
<MyScreenManager>:
    id: screen_manager

    GameScreen:
        name: 'game_screen'
        manager: screen_manager

<GameScreen>:
    spacing: 10
   # size_hint: (None, None)  # Disable automatic sizing
    size: 800, 1000  # Set the size of the window

    canvas.before:
        Color:
            rgba: 1, 1, 1, 1  # Set the background color of the parent
        Rectangle:
            pos: self.pos
            size: self.size
            # pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Center the GameScreen

    orientation: 'vertical'
    Image:
        source: 'bg.jpg'
        allow_stretch: True
        keep_ratio: False
        # size_hint: 1, 1  # Full size
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Centered

    # TextInput:
    #     id: my_input
